{
  "info": {
    "_postman_id": "comments-api-tests",
    "name": "EWM Comments API Tests",
    "description": "Базовые и успешные тесты для проверки кодов ответов и формата JSON эндпоинтов комментариев",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Public Comments",
      "item": [
        {
          "name": "Get Event Comments - Event Not Found",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status code is 404\", function () {",
                  "    pm.response.to.have.status(404);",
                  "});",
                  "pm.test(\"Error response is JSON\", function () {",
                  "    pm.response.to.be.withBody;",
                  "    pm.response.to.be.json;",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/events/99999/comments",
              "host": ["{{baseUrl}}"],
              "path": ["events", "99999", "comments"]
            }
          }
        }
      ]
    },
    {
      "name": "Private Comments",
      "item": [
        {
          "name": "Create Comment - Invalid Text",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status code is 400\", function () {",
                  "    pm.response.to.have.status(400);",
                  "});",
                  "pm.test(\"Validation error is JSON\", function () {",
                  "    pm.response.to.be.json;",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{ \"text\": \"\" }"
            },
            "url": {
              "raw": "{{baseUrl}}/users/1/comments/events/1",
              "host": ["{{baseUrl}}"],
              "path": ["users", "1", "comments", "events", "1"]
            }
          }
        }
      ]
    },
    {
      "name": "Admin Comments",
      "item": [
        {
          "name": "Get All Comments - Success",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status code is 200\", function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "pm.test(\"Response is array\", function () {",
                  "    pm.expect(pm.response.json()).to.be.an('array');",
                  "});",
                  "pm.test(\"Response is JSON\", function () {",
                  "    pm.response.to.be.json;",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/admin/comments?from=0&size=10",
              "host": ["{{baseUrl}}"],
              "path": ["admin", "comments"],
              "query": [
                { "key": "from", "value": "0" },
                { "key": "size", "value": "10" }
              ]
            }
          }
        },
        {
          "name": "Get Comment by ID - Not Found",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status code is 404\", function () {",
                  "    pm.response.to.have.status(404);",
                  "});",
                  "pm.test(\"Error response is JSON\", function () {",
                  "    pm.response.to.be.withBody;",
                  "    pm.response.to.be.json;",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/admin/comments/99999",
              "host": ["{{baseUrl}}"],
              "path": ["admin", "comments", "99999"]
            }
          }
        },
        {
          "name": "Delete Comment by Admin - Not Found",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status code is 404\", function () {",
                  "    pm.response.to.have.status(404);",
                  "});",
                  "pm.test(\"Error response is JSON\", function () {",
                  "    pm.response.to.be.withBody;",
                  "    pm.response.to.be.json;",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/admin/comments/99999",
              "host": ["{{baseUrl}}"],
              "path": ["admin", "comments", "99999"]
            }
          }
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8080",
      "type": "string"
    },
